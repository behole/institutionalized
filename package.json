{
  "name": "institutional-reasoning",
  "version": "0.1.0",
  "description": "LLM decision-making frameworks based on centuries-old human systems",
  "type": "module",
  "workspaces": [
    "frameworks/*",
    "core",
    "mcp-server"
  ],
  "scripts": {
    "dev": "bun run cli.ts",
    "courtroom": "bun run cli.ts courtroom",
    "peer-review": "bun run cli.ts peer-review",
    "red-blue": "bun run cli.ts red-blue",
    "pre-mortem": "bun run cli.ts pre-mortem",
    "studio": "bun run cli.ts studio",
    "test": "bun test",
    "test:unit": "bun test test/core",
    "test:e2e": "bun test test/frameworks",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "typecheck": "bun tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "openai": "^4.76.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "bun-types": "latest"
  },
  "keywords": [
    "llm",
    "ai",
    "decision-making",
    "multi-agent",
    "institutional",
    "courtroom",
    "peer-review",
    "adversarial",
    "reasoning"
  ],
